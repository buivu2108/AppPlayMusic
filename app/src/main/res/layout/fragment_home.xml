<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".fragment.HomeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/back_ground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPageAds"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="8dp"
                android:background="@drawable/ai_no"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <me.relex.circleindicator.CircleIndicator3
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:ci_width="5dp"
                app:ci_height="5dp"
                app:ci_margin="5dp"
                app:ci_orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:ci_gravity="center"/>
            <TextView
                android:id="@+id/tvPlayList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="NHỊP ĐIỆU CẢM XÚC"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewPageAds" />

            <ImageView
                android:id="@+id/imgPlayListOne"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg_lofi_sad"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPlayList"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/icPlayListOne"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="15dp"
                android:background="@drawable/ic_lofi_sad"
                app:layout_constraintBottom_toBottomOf="@id/imgPlayListOne"
                app:layout_constraintStart_toStartOf="@id/imgPlayListOne"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/namePlayListOne"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/icPlayListOne"
                app:layout_constraintLeft_toRightOf="@id/icPlayListOne"
                tools:text="Những Bản Lofi Việt Nhẹ Nhàng Cực Chill" />

            <ImageView
                android:id="@+id/imgPlayListTwo"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg_lofi_sad"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgPlayListOne"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/icPlayListTwo"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="15dp"
                android:background="@drawable/ic_lofi_sad"
                app:layout_constraintBottom_toBottomOf="@id/imgPlayListTwo"
                app:layout_constraintStart_toStartOf="@id/imgPlayListTwo"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/namePlayListTwo"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/icPlayListTwo"
                app:layout_constraintLeft_toRightOf="@id/icPlayListTwo"
                tools:text="Những Bản Lofi Việt Nhẹ Nhàng Cực Chill" />

            <ImageView
                android:id="@+id/imgPlayListThree"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg_lofi_sad"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgPlayListTwo"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/icPlayListThree"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="15dp"
                android:background="@drawable/ic_lofi_sad"
                app:layout_constraintBottom_toBottomOf="@id/imgPlayListThree"
                app:layout_constraintStart_toStartOf="@id/imgPlayListThree"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/namePlayListThree"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/icPlayListThree"
                app:layout_constraintLeft_toRightOf="@id/icPlayListThree"
                tools:text="Những Bản Lofi Việt Nhẹ Nhàng Cực Chill" />

            <TextView
                android:id="@+id/seeMorePlayList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/gray"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Xem thêm play list"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:drawableStartCompat="@android:drawable/ic_dialog_dialer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgPlayListThree" />

            <TextView
                android:id="@+id/tvTopic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="CHỦ ĐỀ VÀ THỂ LOẠI"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/seeMorePlayList"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/seeMoreTopic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:gravity="right"
                android:visibility="invisible"
                android:text="Xem Thêm"
                android:textColor="@android:color/holo_red_light"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/seeMorePlayList"
                tools:ignore="RtlHardcoded" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvTopic"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTopic" />





            <TextView
                android:id="@+id/tvMaybeLike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="CÓ THỂ BẠN THÍCH"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rcvTopic"
                tools:ignore="RtlHardcoded" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvMaybeLike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMaybeLike" />
           <ProgressBar
               android:id="@+id/loadPlayList"
               android:visibility="gone"
               android:layout_width="wrap_content"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="@id/imgPlayListOne"
               app:layout_constraintBottom_toBottomOf="@id/imgPlayListThree"
               android:layout_height="wrap_content"
               />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>